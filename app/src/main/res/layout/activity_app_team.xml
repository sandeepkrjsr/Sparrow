<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/alabhya"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alabhya Vaibhav"
                android:textSize="20dp"
                android:textColor="#000"
                android:clickable="true"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/prof_aloo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/himanshu"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Himanshu Kumar"
                android:textSize="20dp"
                android:textColor="#000"
                android:clickable="true"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/prof_him"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/krsandeep"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kr. Sandeep"
                android:textSize="20dp"
                android:textColor="#000"
                android:clickable="true"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/prof_san"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/pankaj"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pankaj Kumar"
                android:textSize="20dp"
                android:textColor="#000"
                android:clickable="true"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/prof_pank"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/samsruti"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samsruti Dash"
                android:textSize="20dp"
                android:textColor="#000"
                android:clickable="true"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/prof_sam"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/sparrow"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyright &#169;, 2017, kodexlabs"
                android:clickable="true"
                android:layout_margin="10dp"
                android:id="@+id/copyright"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>