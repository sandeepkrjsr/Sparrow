<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/story_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx_id"
            android:visibility="invisible"
            android:elevation="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="370dp"
                android:layout_height="125dp"
                android:id="@+id/story_bg"
                android:background="@drawable/loading"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Title"
                android:textSize="25dp"
                android:textColor="#000"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:id="@+id/tx1_name"
                android:layout_below="@+id/story_bg"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="field"
                android:textColor="#000"
                android:id="@+id/tx1_desc"
                android:layout_below="@+id/tx1_name"
                android:layout_alignLeft="@+id/tx1_name"
                android:layout_alignStart="@+id/tx1_name"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginEnd="15dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>